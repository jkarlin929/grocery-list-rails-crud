<div class="card">
    <h1 class="shadow"><b> Item: <%= @list.item %></b> </h1>
    <div class="container">
    <h2 class="shadow"> Brand: <%= @list.brand %> </h2>
    <h2 class="shadow"> Store: <%= @list.store %> </h2>
    <h2 class="shadow"> Price: <%= @list.price %> </h2>
  </div>
</div>

<div class="links">
  <%= link_to "| All Items |", lists_path %>

  <%= link_to "| Edit Item |", edit_list_path(@list) %>
</div>

<%= form_for @list, html: {method: "delete"} do |f| %>

  <%= f.submit "Delete #{@list.item}?", :class => 'button' %>

  <% end %>